<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Разрешения -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Разрешения для работы с Integration Library Эвотор -->
    <uses-permission android:name="ru.evotor.permission.RECEIPT_ACCESS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EevotorIntegration"
        android:usesCleartextTraffic="false">

        <!-- UUID приложения Эвотор -->
        <meta-data
            android:name="app_uuid"
            android:value="d1cf8e92-7374-4957-9bbd-c84d2d4522d9" />

        <!-- Главная Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Декларация товароучетной системы для Эвотор -->
            <meta-data
                android:name="ru.evotor.launcher.BACKGROUND_COLOR"
                android:value="#FF6200EE" />
        </activity>

        <!-- Activity настроек -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/settings_title"
            android:parentActivityName=".MainActivity" />

        <!-- BroadcastReceiver для событий чеков -->
        <receiver
            android:name=".receivers.ReceiptBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <!-- События продажи -->
                <action android:name="ru.evotor.devices.events.ReceiptEvent.SELL_RECEIPT" />
                <!-- События возврата -->
                <action android:name="ru.evotor.devices.events.ReceiptEvent.PAYBACK_RECEIPT" />
                <!-- События прихода -->
                <action android:name="ru.evotor.devices.events.ReceiptEvent.BUY_RECEIPT" />
                <!-- События возврата прихода -->
                <action android:name="ru.evotor.devices.events.ReceiptEvent.BUYBACK_RECEIPT" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
