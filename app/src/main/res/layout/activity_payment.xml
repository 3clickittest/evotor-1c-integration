<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2C2C2C">

    <!-- Toolbar темный -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2C2C2C"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Пустое место для контента чека -->

    </LinearLayout>

    <!-- Блок с итогом и оплатой -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Электронный чек -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/electronic_receipt"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/phoneNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+8 929 400-86-08"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/emailSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Итого -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total_label"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalAmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400 ₽"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Кнопки оплаты -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/cashPaymentButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/cash_payment"
                android:textColor="@color/black"
                android:backgroundTint="#9ACD32"
                android:layout_marginEnd="8dp"
                android:drawableStart="@android:drawable/ic_menu_gallery"
                android:drawablePadding="8dp" />

            <Button
                android:id="@+id/cardPaymentButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/card_payment"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_marginStart="8dp"
                android:drawableStart="@android:drawable/ic_menu_slideshow"
                android:drawablePadding="8dp" />
        </LinearLayout>

        <!-- Типы оплаты -->
        <Button
            android:id="@+id/paymentTypesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/payment_types_title"
            android:textColor="@color/white"
            android:backgroundTint="#4169E1"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawablePadding="8dp"
            android:padding="16dp" />

    </LinearLayout>

</LinearLayout>
